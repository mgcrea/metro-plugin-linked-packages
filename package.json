{
  "name": "@mgcrea/metro-plugin-linked-packages",
  "version": "2.1.0",
  "description": "Automatically resolve linked packages in your react-native project",
  "author": "",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx --inspect --watch src/index.ts",
    "build": "tsup src/index.ts --format cjs,esm --sourcemap --dts --clean --no-config",
    "preview": "node --experimental-specifier-resolution=node --no-warnings dist/index.js",
    "prettify": "prettier --write src/ test/",
    "lint": "eslint src/ test/",
    "prettycheck": "prettier --check src/ test/",
    "check": "tsc --noEmit",
    "spec": "vitest --run",
    "test": "npm run lint && npm run prettycheck && npm run check && npm run spec",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "tinyglobby": "^0.2.13",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@mgcrea/eslint-config-node": "^0.14.0",
    "@types/node": "^25.0.0",
    "eslint": "^9.39.1",
    "metro-config": "^0.83.3",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "rimraf": "^6.1.2",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "metro-config": ">=0.80.0"
  },
  "packageManager": "pnpm@10.25.0+sha512.5e82639027af37cf832061bcc6d639c219634488e0f2baebe785028a793de7b525ffcd3f7ff574f5e9860654e098fe852ba8ac5dd5cefe1767d23a020a92f501"
}
